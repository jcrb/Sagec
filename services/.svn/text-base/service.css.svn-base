/* Pour incorporer cette feuille de style dans un programme, rajouter
	dans la section <HEAD> un tag <LINK>:
	<LINK REL = "stylesheet" TYPE = "text/css" HREF = "service.css">
*/

table{
border: 2px solid blue;	
width: 100%;
border-collapse: collapse;	
font-size:6pt;
}

th {						
font-family: monospace;
border: thin solid #6495ed;

padding: 5px;
background-color: yellow;
}

td{
font-family: sans-serif;
border:thin solid #6495ed;
padding: 5px;
text-align: left;
background-color: #D0E3FA;
font-size:10pt;
}

.verda{font: normal 6pt verdana, sans-cherif;color: red;}
.navy10{font: normal 12pt verdana, sans-cherif;color: navy;}

